<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:xu="http://schemas.android.com/apk/res-auto"
    tools:context="com.xu.topnews.module.headlines.ui.fragment.NewsHeadLinesFragment">

    <com.xu.appbaseui.viewpagertitle.XuBaseViewPagerTitle
        android:id="@+id/vpt_newsheadline"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        xu:background_content_color="@color/baseui_navigationBar_Bottom_color"
        >

    </com.xu.appbaseui.viewpagertitle.XuBaseViewPagerTitle>

    <android.support.v4.view.ViewPager
        android:id="@+id/vp_newsheadline"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/vpt_newsheadline"
        ></android.support.v4.view.ViewPager>

</RelativeLayout>
