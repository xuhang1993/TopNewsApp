<?xml version="1.0" encoding="utf-8"?>
<resources>

    <declare-styleable name="XuBaseNavigationTabBar">
        <attr name="ntb_titled" format="boolean"/>
        <attr name="ntb_badged" format="boolean"/>
        <attr name="ntb_scaled" format="boolean"/>
        <attr name="ntb_tinted" format="boolean"/>
        <attr name="ntb_swiped" format="boolean"/>
        <attr name="ntb_badge_use_typeface" format="boolean"/>

        <attr name="ntb_title_size" format="dimension"/>
        <attr name="ntb_title_mode" format="enum">
            <enum name="all" value="0"/>
            <enum name="active" value="1"/>
        </attr>

        <attr name="ntb_badge_size" format="dimension"/>
        <attr name="ntb_badge_position" format="enum">
            <enum name="left" value="0"/>
            <enum name="center" value="1"/>
            <enum name="right" value="2"/>
        </attr>
        <attr name="ntb_badge_gravity" format="enum">
            <enum name="top" value="0"/>
            <enum name="bottom" value="1"/>
        </attr>
        <attr name="ntb_badge_bg_color" format="color"/>
        <attr name="ntb_badge_title_color" format="color"/>

        <attr name="ntb_typeface" format="string"/>
        <attr name="ntb_corners_radius" format="dimension"/>
        <attr name="ntb_icon_size_fraction" format="float"/>
        <attr name="ntb_animation_duration" format="integer"/>

        <attr name="ntb_inactive_color" format="color"/>
        <attr name="ntb_active_color" format="color"/>
        <attr name="ntb_bg_color" format="color"/>

        <attr name="ntb_preview_colors" format="reference"/>
    </declare-styleable>


    <declare-styleable name="Rotate3dAnimation">
        <attr name="rollType" format="enum">
            <enum name="x" value="0"/>
            <enum name="y" value="1"/>
            <enum name="z" value="2"/>
        </attr>
        <attr name="fromDeg" format="float" />
        <attr name="toDeg" format="float" />
        <attr name="pivotX" format="fraction"/>
        <attr name="pivotY" format="fraction" />
    </declare-styleable>


    <declare-styleable name="CircleTextProgressbar">

        <attr name="in_circle_color" format="color"/>

    </declare-styleable>

    /*recyclerStyle*/
    <declare-styleable name="XuBaseRecyclerView">
    </declare-styleable>
    /*loadingStyle*/
    <declare-styleable name="XuBaseUILoadingView">
        <attr name="a_pointColor" format="color"></attr>
        <attr name="b_pointColor" format="color"></attr>
        <attr name="c_pointColor" format="color"></attr>
    </declare-styleable>

    <declare-styleable name="XuBaseTopNavigationBar">
        <attr name="leftText" format="string"></attr>
        <attr name="leftImage" format="reference"></attr>

        <attr name="rightText" format="string"></attr>
        <attr name="rightImage" format="reference"></attr>

        <attr name="titleText" format="string"></attr>

        <attr name="left_type" format="enum">
            <enum name="text" value="0"/>
            <enum name="image" value="1"></enum>
            <enum name="textwithimage" value="2"/>
            <enum name="none" value="3"/>
        </attr>

        <attr name="right_type" format="enum">
            <enum name="text" value="0"/>
            <enum name="image" value="1"></enum>
            <enum name="none" value="3"/>
        </attr>

    </declare-styleable>
    
    <declare-styleable name="XuBaseViewPagerTitle">

        <attr name="background_content_color" format="color"/>
        <attr name="defaultTextViewColor" format="color"></attr>
        <attr name="selectedTextViewColor" format="color"></attr>
        <attr name="defaultTextViewSize" format="dimension"/>
        <attr name="selectedTextViewSize" format="dimension"/>
        <attr name="item_margins" format="dimension"/>
        <attr name="line_start_color" format="color"/>
        <attr name="line_end_color" format="color"/>
        <attr name="line_height" format="integer"/>
        
    </declare-styleable>
    

</resources>